= simple_form_for(@cliente) do |f|
  = f.error_notification

  .form-inputs
    = f.input :nome
    = f.input :dataNascimento, start_year: Date.today.year - 120, end_year: Date.today.year, add_month_numbers: true, order: [:day, :month, :year], label: "Data de Nascimento"
    = f.input :rg
    = f.input :cpf
    = f.input :telefone
    = f.input :login
    = f.input :senha, as: :password
  <br>
  .form-actions
    = f.submit "Salvar"
  <br>
